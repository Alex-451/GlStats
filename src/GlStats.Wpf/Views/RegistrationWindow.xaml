<Window x:Class="GlStats.Wpf.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlStats.Wpf.Views"
        xmlns:viewModels="clr-namespace:GlStats.Wpf.ViewModels"
        xmlns:p="clr-namespace:GlStats.Wpf.Resources.Strings"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:RegistrationWindowViewModel}"
        Title="{Binding Title}" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Content="{x:Static p:AppResource.GitLabConnectionSetup}" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Url}" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Token}" Margin="0,0,0,5"/>
        <Button Command="{Binding RegisterCommand}" Content="{x:Static p:AppResource.Continue}"/>
    </StackPanel>
</Window>
